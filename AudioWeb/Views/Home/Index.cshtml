<!DOCTYPE html>
<html>
<head>
    <title>Audio Player</title>
    @Styles.Render("~/Content/SiteStyles")
</head>
<body>
    <header>
        <h2>Music Player</h2>
    </header>
    <div ng-app="module1" ng-controller="controller1" class="content">
        <div class="audio-controls">
            @*<button ng-click="reset(currentAudio.audio)">Reset</button>*@
            <button ng-click="playPrev(currentAudio)" class="play-button prev"></button>
            <button ng-click="play(currentAudio.audio)" class="play-button" ng-class="currentAudio.audio.paused ? 'play' : 'stop'"></button>
            <button ng-click="playNext(currentAudio)" class="play-button next"></button>
            <input type="range" step="0.01" min="0" max="1" ng-model="currentAudio.audio.progress" />
            <label>{{currentAudio.audio.progress}}</label>
        </div>
        <div class="song" ng-class="{'current': (audio == currentAudio)}" ng-repeat="audio in audios" ng-click="playSong(audio)">
            <p>{{audio.name}} <span> Plays: {{audio.plays}};</span><span> Skips: {{audio.skips}}</span></p>
        </div>
        <div><button ng-click="refreshData()">Refresh</button></div>
    </div>

    @Scripts.Render("~/bundles/audioApp")
</body>
</html>